    database.create({
    title: 'Video 01',
    description: 'Este Ã© o video 01',
    duration: 180,     
    })

    console.log(database.list())
})

server.get('/videos', () => {
    return 'hello'
})

server.put('/videos/:id', () => {
    return 'hello node.js'
})

